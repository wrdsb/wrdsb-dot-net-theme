  <div class="container body-content">
          <!-- sidebar + content area -->
  <div class="container">
    <div class="row">
      <!-- left sidebar -->
<% if(ConfigurationManager.AppSettings["leftSidebar"] == "true") %>
          <% { %>
      <div class="col-sm-3">
        <!-- on page navigation -->
        <div class="collapse sub-navbar-collapse">
          <div class="sub-menu-heading">
            <span><a href="<? section title ??>">Parent Page Title</a></span>
          </div>
          <div class="sub-menu-items">
            <ul>
                <li><a href="<? child page url ??>">Child Page Title</a></li>
                <li><a href="<? child page url ??>">Sibling of Child Page Title</a></li>
                <li><a href="<? child page url ??>">Sibling of Child Page Title</a></li>
                <li><a href="<? child page url ??>"><strong>Current Page Title</strong></a></li>
                <li><a href="<? child page url ??>">Sibling of Child Page Title</a></li>
                <li><a href="<? child page url ??>">Sibling of Child Page Title</a></li>
                <li><a href="<? child page url ??>">Sibling of Child Page Title</a></li>
              </ul>
          </div>
        </div>

