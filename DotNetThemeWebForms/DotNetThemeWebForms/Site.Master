        <p class="text-center"><input type="text" class="" /><span class="icon-search"></span></p>
      </div>

      <div class="collapse navbar-collapse">
        <ul id="menu-top-menu" class="nav nav-justified">
          <li runat="server" id="home_link" class="menu-item current-menu-item current_page_item menu-item-home"><a title="Take me to the home page" href="Default.aspx">Home</a></li>
