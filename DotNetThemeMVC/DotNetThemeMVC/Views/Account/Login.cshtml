@model DotNetThemeMVC.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginTheme.cshtml";
    ViewBag.Title = "Log in";
}

<div class="login">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)

                    <div id="logo">
                        <img src="https://s3.amazonaws.com/wrdsb-theme/images/WRDSB_Logo.svg" />
                    </div>
                    <h1>Log in to @System.Web.Configuration.WebConfigurationManager.AppSettings["loginTitle"].ToString()</h1>
                    <form id="loginform">
                        <fieldset>
                            <!-- Username -->
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)

                            <!-- Password -->
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                            <!-- if an error: <p class="alert alert-danger" id="TextBox1Error" role="alert">$textbox1_errormessage</p> -->
                            <!-- Submit Form -->
                            <input type="submit" name="btnLogin" id="btnLogin" value="Log in" />
                        </fieldset>
                    </form>
                    <p>
                        @Html.ActionLink("Register for an Account", "Register")
                    </p>
                    <p class="fineprint"><a href="https://mypassword.wrdsb.ca/" target="_blank">Password Reset</a></p>

            }
</div>



