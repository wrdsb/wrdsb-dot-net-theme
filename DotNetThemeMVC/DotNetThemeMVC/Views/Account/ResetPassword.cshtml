@model DotNetThemeMVC.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginTheme.cshtml";
    ViewBag.Title = "Reset password";
}

<div class="login">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div id="logo">
            <img src="https://s3.amazonaws.com/wrdsb-theme/images/WRDSB_Logo.svg" />
        </div>
        <h1>Reset password for @System.Web.Configuration.WebConfigurationManager.AppSettings["loginTitle"].ToString()</h1>

        <form id="loginform">
            <fieldset>
                <!-- Email -->
                @Html.HiddenFor(model => model.Code)
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)

                <!-- Password -->
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)

                <!-- Confirm Password -->
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.Partial("_ValidationSummary", ViewData.ModelState)
                <!-- Submit Form -->
                <input type="submit" value="Reset" />
            </fieldset>
        </form>
    }
</div>