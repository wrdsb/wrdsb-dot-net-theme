@model DotNetThemeMVC.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LoginTheme.cshtml";
    ViewBag.Title = "Register";
}

<div class="login">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div id="logo">
            <img src="https://s3.amazonaws.com/wrdsb-theme/images/WRDSB_Logo.svg" />
        </div>
        <h1>Create an account for @System.Web.Configuration.WebConfigurationManager.AppSettings["loginTitle"].ToString()</h1>

        <form id="accountcreation">
            <fieldset>
                <!-- Email -->
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)

                <!-- Compare Email -->
                @Html.LabelFor(m => m.CompareEmail)
                @Html.TextBoxFor(m => m.CompareEmail)

                <!-- Password -->
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)

                <!-- Confirm Password-->
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.Partial("_ValidationSummary", ViewData.ModelState)
                <!-- Submit Form-->
                <input type="submit" value="Register" />
            </fieldset>
        </form>
    }
</div>