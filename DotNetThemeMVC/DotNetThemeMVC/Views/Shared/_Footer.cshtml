            </div>
            <div class="col-sm-6 col-md-3">
                <h1>Need Help?</h1>
                @if (@System.Web.Configuration.WebConfigurationManager.AppSettings["isInternal"] == "true")
                {
                    <!-- for internal applications or administrative screens
                    make sure you link to the direct link for a ticket -->
                    <p><a href="@System.Web.Configuration.WebConfigurationManager.AppSettings["servicedesk"].ToString()" target="_blank">Questions? Requests? ITService Desk!</a></p>
                }

                @if (@System.Web.Configuration.WebConfigurationManager.AppSettings["isInternal"] == "false")
                {
                <!-- for public facing applications or where help doesn't come through ITService Desk -->
                    <p>For comments, questions, or problems regarding @System.Web.Configuration.WebConfigurationManager.AppSettings["loginTitle"].ToString() contact us by calling or emailing us with a detailed description of your inquery.</p>
                    <p>
                        @System.Web.Configuration.WebConfigurationManager.AppSettings["owner"].ToString()<br />
                        Email: <a href="@System.Web.Configuration.WebConfigurationManager.AppSettings["ownerEmail"].ToString()">Contact Us</a><br />
                        Phone: @System.Web.Configuration.WebConfigurationManager.AppSettings["phone"].ToString()
                    </p>
                }
            </div>

            <!-- for internal applications or administrative screens
            make sure you link to the direct link for a ticket -->
            @if (@System.Web.Configuration.WebConfigurationManager.AppSettings["isInternal"] == "true")
            {
                <div class="col-sm-6 col-md-3">
                    <h1>Application Information</h1>
                    <h2>Owner</h2>
                    <p>@System.Web.Configuration.WebConfigurationManager.AppSettings["owner"].ToString()</p>
                    <p>Email: <a href="@System.Web.Configuration.WebConfigurationManager.AppSettings["ownerEmail"].ToString()">Contact Us</a></p>
                    <h2>Developer</h2>
                    <p>@System.Web.Configuration.WebConfigurationManager.AppSettings["developer"].ToString()</p>
                </div>
            }
            <div class="col-sm-12 col-md-3">
                <!--Space for more footer columns -->
            </div>
        </div>
    </div>
</div>
